{
  "version": "independent",
  "command": {
    "bootstrap": {
      "ignore": [
        "@jscad/desktop",
        "@jscad/gcode-deserializer",
        "@jscad/scad-deserializer"
      ]
    },
    "version": {
      "allowBranch": "release",
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): publish"
    }
  },
  "packages": [
    "packages/cli",
    "packages/core",
    "packages/desktop",
    "packages/examples",
    "packages/io/*",
    "packages/modeling",
    "packages/utils/*",
    "packages/vtree",
    "packages/web"
  ],
  "ignoreChanges": [
    "**/*.md"
  ]
}
